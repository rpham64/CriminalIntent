<?xml version="1.0" encoding="utf-8"?>
<manifest package="bignerdranch.criminalintent"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
                     android:maxSdkVersion="24"/>

    <uses-feature android:name="android.hardware.camera2"
                  android:required="false"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.CrimeListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.CrimePagerActivity"
            android:label="@string/app_name"
            android:parentActivityName=".ui.CrimeListActivity"/>
        <activity
            android:name=".ui.AboutActivity"
            android:label="@string/about_my_app"
            android:parentActivityName=".ui.CrimeListActivity"
            android:theme="@style/AboutLibrariesTheme" />
    </application>

</manifest>
